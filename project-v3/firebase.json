{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites":[
      {
        "source": "/fc/images",
        "functions": "images"
      },
      {
        "source": "/fc/toonDetail",
        "functions": "toonDetail"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
